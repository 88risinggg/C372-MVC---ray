<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Student List App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Student List App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addStudent">Add new student</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

  <div class="container">
    <br>
    <div class="text-center"><h2>Students from Student List App Database</h2></div>
    <br>
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Student Name</th>
            <th width="100">Student Image</th>
            <th width="50">Dob</th>
            <th width="50">Contact</th>
            <th width="50">Edit</th>
            <th width="50">Delete</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < students.length; i++) { %>
          <tr>
            <td><a href="/student/<%= students[i].studentId %>" ><%= students[i].name %></a></td>
            <td><img src = "images/<%= students[i].image %>" width="20%"></td>
            <% const dob = new Date(students[i].dob); %>
            <% const formattedDob = dob.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' }); %>
            <td><%= formattedDob %></td>
            <td><%= students[i].contact %></td>
            <!-- Edit Link -->
            <td><a href="/editStudent/<%= students[i].studentId %>">Edit</a></td>
            <!-- Delete Link -->
            <td><a href="/deleteStudent/<%= students[i].studentId %>" onclick="return confirm('Are you sure you want to delete this student(<%= students[i].name %>)?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
